---
import Layout from "../layouts/Layout.astro";
import Apps from "../components/apps.component.astro";
import Navigation from "../components/navigation.component.astro";
---

<Layout title="BetSound Main" mainClasses="flex flex-col">
  <Apps />
  <div class="flex flex-1 flex-col items-center justify-center">
    <div class="relative flex justify-center items-center rounded-full">
      <img src="props/speaker.svg" class="w-64" />
      <img src="icons/headphones.svg" class="w-14 absolute opacity-30" />
    </div>
    <div class="relative flex justify-center items-center">
      <img src="props/speaker.svg" class="w-64" />
      <img src="icons/mobile-notch.svg" class="w-14 absolute opacity-30" />
    </div>
    <div class="relative flex justify-center items-center">
      <img src="props/speaker.svg" class="w-64" />
      <img src="icons/speaker-icon.svg" class="w-14 absolute opacity-30" />
    </div>
  </div>
  <Navigation />
</Layout>
